<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_details_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.ui.fragments.ProductDetails">

    <ProgressBar
        android:id="@+id/product_loading_progress"
        android:layout_margin="12dp"
        android:visibility="visible"
        android:indeterminateTint="@color/blueColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circularbackground"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:elevation="0dp"
        android:theme="@style/Theme.AnJu">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:title="Tomato"
            app:expandedTitleTextAppearance="@style/MyExpandedTitle"
            app:collapsedTitleTextAppearance="@style/MyCollapsedTitle"
            app:collapsedTitleTextColor="@color/black"
            app:collapsedTitleGravity="bottom"
            android:background="@drawable/gradient_layout_product_detail"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProductImage"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/carrot__1_" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/curved_layout_product_details"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_Expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/primary_text_color"
                android:text="@string/expire_date"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ExpiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_Expiry"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:text="16 May 2023"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/TextCopyBackground"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_ExpiryDate"
                android:textColor="@color/primary_text_color"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/description"
                android:layout_margin="16dp"
                android:textSize="16sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_text"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="fill"
                android:textColor="@color/primary_text_color"
                android:fontFamily="@font/poppins"
                android:text="Hello this is a product and this is a description and how are you are you "
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:text="Tomato"
                android:textSize="28sp"
                android:textColor="@color/primary_text_color"
                android:fontFamily="@font/poppins_semibold"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/prdct_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/primary_text_color"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/product_details"
                />
            <RelativeLayout
                android:id="@+id/rl_product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prdct_details"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/productId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Product ID :"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/productIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/productId"
                    android:layout_marginStart="12dp"
                    android:text="123456789"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/blueColor"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/copyProductId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/productIdValue"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_content_copy_24"
                    android:tint="@color/primary_text_color"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_seeding_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_product_id"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/product_quantity"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_quantity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/product_quantity"
                    android:layout_marginStart="12dp"
                    android:text="10 kg"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/blueColor"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_seeding_date"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/price_text"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_price"
                    android:layout_marginStart="12dp"
                    android:text="â‚¹ 100"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/blueColor"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/rl_order_details"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/rl_price"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_order_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bag"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blueColor"
                    android:text="Order details"
                    />
                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_preview"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:text="Order id :"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:layout_below="@id/tv_order_preview"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_toEndOf="@id/tv_order_id"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ordered_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered by :"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/tv_order_id"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="24sp"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ordered_by_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rohit Kumar"
                    android:layout_below="@id/tv_order_id"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_toEndOf="@id/tv_ordered_by"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order date :"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/tv_ordered_by"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="24sp"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ordered_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2020"
                    android:layout_below="@id/tv_ordered_by"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_toEndOf="@id/tv_order_date"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delivery_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipment_location"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/tv_order_date"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="24sp"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delivery_location_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_below="@id/tv_order_date"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/tv_delivery_location"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_status"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/tv_delivery_location"
                    android:layout_toEndOf="@id/iv_order_preview"
                    android:layout_marginStart="24sp"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="@font/poppins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_payment_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_transit"
                    android:layout_below="@id/tv_delivery_location"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/tv_payment_status"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primary_text_color"
                    />

            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/update"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_details"
                android:layout_marginTop="16dp"
                android:layout_marginStart="84dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text_color"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@id/rl_order_details"
                app:layout_constraintStart_toStartOf="parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/update"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/canel_order"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="cancel"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/confirm_button_drawable"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm_order"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="confirm"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/TextCopyBackground"
                    android:background="@drawable/confirm_button_drawable"
                    />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>